echo you may be asked for your local password ...
TARGET=/usr/local/share/samples/piano/
sudo mkdir -p $TARGET
echo converting flac to rra...
for i in bright_c2.flac bright_c3.flac bright_c4.flac bright_c5.flac bright_c6.flac bright_c7.flac bright_e2.flac bright_e3.flac bright_e4.flac bright_e5.flac bright_e6.flac bright_g2.flac bright_g3.flac bright_g4.flac bright_g5.flac bright_g6.flac; do
    flac2rra $i
    where=`dirname $i`
    name=`basename $i .flac`
    if [ $where = "." ]
        then
        sudo cp $name.rra $TARGET/
    else
        sudo mkdir -p $TARGET/$where
        sudo cp $where/$name.rra $TARGET/$where/
    fi
    rm $i
done
